// Mintalist — Phase 1 + 2 + 3 + 4 schema
// Run: npx prisma generate && npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Tier {
  FREE
  GOLD
}

model Vendor {
  id            String   @id @default(cuid())
  clerkUserId   String   @unique
  name          String
  slug          String   @unique
  logoUrl       String?
  brandColor    String   @default("#10B981")
  tier                  Tier     @default(FREE)
  backgroundImageUrl    String?
  address               String?
  phone                 String?
  locationName          String?
  latitude              Float?   // From browser geolocation (no API)
  longitude             Float?
  planPreference        String?  // FREE_ALWAYS | GOLD_1_MONTH (onboarding choice)

  menuItems       MenuItem[]
  socialLinks     VendorSocialLink[]
  customLinks     VendorCustomLink[]
  payments        Payment[]
  adClicks        AdClick[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clerkUserId])
  @@index([slug])
  @@index([tier])
}

model VendorSocialLink {
  id       String @id @default(cuid())
  platform String
  url      String

  vendorId String
  vendor   Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vendorId])
}

model VendorCustomLink {
  id    String @id @default(cuid())
  title String
  url   String

  vendorId String
  vendor   Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vendorId])
}

model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  isAvailable Boolean  @default(true)

  vendorId String
  vendor   Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vendorId])
}

model Voucher {
  id                 String    @id @default(cuid())
  code               String    @unique
  tier               Tier
  redeemedAt         DateTime?
  redeemedByVendorId String?

  createdAt DateTime  @default(now())
  expiresAt DateTime?

  @@index([code])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum BillingPeriod {
  MONTHLY
  ANNUAL
}

model Payment {
  id                  String         @id @default(cuid())
  vendorId            String
  vendor              Vendor         @relation(fields: [vendorId], references: [id])
  tier                Tier
  billingPeriod       BillingPeriod?
  amountCents         Int
  currency            String         @default("EGP")
  status              PaymentStatus  @default(PENDING)
  paymobOrderId       String?        @unique // Reserved for future payment provider
  paymobTransactionId String?

  createdAt DateTime @default(now())

  @@index([vendorId])
  @@index([paymobOrderId])
}

// Gold signup / upgrade contact request — Hub is notified to contact the vendor
model ContactRequest {
  id           String   @id @default(cuid())
  vendorId     String
  vendorName   String
  vendorEmail  String
  vendorPhone  String?
  source       String   // ONBOARDING_GOLD | UPGRADE_CLICK
  createdAt    DateTime @default(now())

  @@index([vendorId])
  @@index([createdAt])
}

// Ad click on Silver vendor page — link to exale.net/apply; Hub is notified
model AdClick {
  id        String   @id @default(cuid())
  vendorId  String
  vendor    Vendor   @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([vendorId])
  @@index([createdAt])
}

// Employee vendor visit / lead — filled when staff close a deal on the ground
model VendorVisit {
  id              String   @id @default(cuid())
  // Who filled the form
  employeeName    String
  employeeEmail   String
  // Vendor / business
  businessName    String
  contactName     String
  contactPhone    String
  contactEmail    String?
  address         String?
  locationName    String?  // e.g. "Downtown branch"
  agreedTier      Tier     // Silver (FREE), Gold (GOLD)
  visitDate       DateTime @default(now())
  notes           String?  // Free text from the visit
  status          String   @default("PENDING") // PENDING | CONTACTED | ONBOARDED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([visitDate])
}
